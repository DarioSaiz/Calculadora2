<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#070B0B"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/multiplicar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="#FFAB40"
        android:text="*"
        app:layout_constraintBottom_toTopOf="@+id/dividir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/mas9"
        app:layout_constraintTop_toBottomOf="@+id/resta" />

    <Button
        android:id="@+id/mas2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="480dp"
        android:backgroundTint="#392867"
        android:text="2"
        app:layout_constraintBottom_toTopOf="@+id/mas5"
        app:layout_constraintEnd_toStartOf="@+id/mas3"
        app:layout_constraintStart_toEndOf="@+id/mas1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/dividir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="59dp"
        android:backgroundTint="#FFAB40"
        android:text="/"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/retroceso"
        app:layout_constraintTop_toBottomOf="@+id/multiplicar" />

    <Button
        android:id="@+id/mas8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:backgroundTint="#392867"
        app:layout_constraintBottom_toTopOf="@+id/igual"
        app:layout_constraintEnd_toStartOf="@+id/mas9"
        app:layout_constraintStart_toEndOf="@+id/mas7"
        app:layout_constraintTop_toBottomOf="@+id/mas5" />

    <Button
        android:id="@+id/mas7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:backgroundTint="#392867"
        android:text="7"
        app:layout_constraintBottom_toTopOf="@+id/mas0"
        app:layout_constraintEnd_toStartOf="@+id/mas8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mas4" />

    <Button
        android:id="@+id/mas3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="480dp"
        android:layout_marginEnd="1dp"
        android:backgroundTint="#392867"
        android:text="3"
        app:layout_constraintBottom_toTopOf="@+id/mas6"
        app:layout_constraintEnd_toStartOf="@+id/suma"
        app:layout_constraintStart_toEndOf="@+id/mas2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/resta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="#FFAB40"
        android:text="-"
        app:layout_constraintBottom_toTopOf="@+id/multiplicar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mas6"
        app:layout_constraintTop_toBottomOf="@+id/suma" />

    <Button
        android:id="@+id/suma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="480dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="#FFAB40"
        android:text="+"
        app:layout_constraintBottom_toTopOf="@+id/resta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mas3"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mas4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:backgroundTint="#392867"
        android:text="4"
        app:layout_constraintBottom_toTopOf="@+id/mas7"
        app:layout_constraintEnd_toStartOf="@+id/mas5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mas1" />

    <Button
        android:id="@+id/mas6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:backgroundTint="#392867"
        android:text="6"
        app:layout_constraintBottom_toTopOf="@+id/mas9"
        app:layout_constraintEnd_toStartOf="@+id/resta"
        app:layout_constraintStart_toEndOf="@+id/mas5"
        app:layout_constraintTop_toBottomOf="@+id/mas3" />

    <Button
        android:id="@+id/mas9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:backgroundTint="#392867"
        android:text="9"
        app:layout_constraintBottom_toTopOf="@+id/retroceso"
        app:layout_constraintEnd_toStartOf="@+id/multiplicar"
        app:layout_constraintStart_toEndOf="@+id/mas8"
        app:layout_constraintTop_toBottomOf="@+id/mas6" />

    <Button
        android:id="@+id/mas5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#392867"
        android:text="5"
        app:layout_constraintBottom_toTopOf="@+id/mas8"
        app:layout_constraintEnd_toStartOf="@+id/mas6"
        app:layout_constraintStart_toEndOf="@+id/mas4"
        app:layout_constraintTop_toBottomOf="@+id/mas2" />

    <Button
        android:id="@+id/mas0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginBottom="59dp"
        android:backgroundTint="#392867"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/igual"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mas7" />

    <Button
        android:id="@+id/mas1"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="480dp"
        android:layout_marginStart="17dp"
        android:backgroundTint="#392867"
        android:text="1"
        app:layout_constraintBottom_toTopOf="@+id/mas4"
        app:layout_constraintEnd_toStartOf="@+id/mas2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/retroceso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="59dp"
        android:backgroundTint="#FFAB40"
        android:text="<--"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dividir"
        app:layout_constraintStart_toEndOf="@+id/igual"
        app:layout_constraintTop_toBottomOf="@+id/mas9" />

    <Button
        android:id="@+id/igual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="59dp"
        android:backgroundTint="#FFAB40"
        android:text="="
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/retroceso"
        app:layout_constraintStart_toEndOf="@+id/mas0"
        app:layout_constraintTop_toBottomOf="@+id/mas8" />

    <TextView
        android:id="@+id/pantalla"
        android:layout_width="373dp"
        android:layout_height="437dp"
        android:background="@color/black"
        android:text="0"
        android:textAlignment="viewEnd"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="96sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.096" />

    <Button
        android:id="@+id/coma"
        android:layout_width="180dp"
        android:layout_height="53dp"
        android:layout_marginBottom="10dp"
        android:layout_margintoStart="17dp"
        android:backgroundTint="#584C7A"
        android:text=","
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.094"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mas0"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/C"
        android:layout_width="180dp"
        android:layout_height="53dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#FFAB40"
        android:text="C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/coma"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.991" />



</androidx.constraintlayout.widget.ConstraintLayout>